{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "build",
        "allowJs": true,
        "checkJs": true,
        "lib": ["ES2020", "ES2021.Intl"],
        "esModuleInterop": true,
        "strictBindCallApply": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"]
    },
    // "include": ["server/jigoku/**/*"],
    "include": ["server/**/*"],
    // "include": ["server/**/*"],
    "exclude": ["test/**/*"]
}
