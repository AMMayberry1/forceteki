{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Node File",
            "program": "${file}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "outDir": null,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": null
        },
        {
            "name": "Attach to Process",
            "type": "node",
            "request": "attach",
            "processId": "${command.PickProcess}",
            "port": 5858,
            "sourceMaps": false,
            "outDir": null
        },
        {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jasmine/bin/jasmine.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "env": { "JASMINE_CONFIG_PATH": "./jasmine.json" },
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node", 
            "request": "launch", 
            "name": "Debug Open Jasmine Test (No Compile)", 
            "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine.js",
            "args": ["--config=./jasmine.json", "${file}"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}